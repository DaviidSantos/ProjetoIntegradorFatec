<Window x:Class="Uno.Views.BaixaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uno.Views"
        mc:Ignorable="d"
        Title="BaixaView" Height="600" Width="250" MaxWidth="250" MaxHeight="600">
    <StackPanel Margin="20 20 20 0">
        <TextBlock Text="Baixa"
                       FontSize="30"
                       FontWeight="SemiBold"
                       Foreground="#161616"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="0 30 0 0">
                <TextBlock Text="Id Amostra"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2659E7"/>
                <TextBox Margin="0 20 0 0"
                         x:Name="IdAmostra"
                             Padding="7"
                             BorderBrush="#A7A6A7">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0 30 0 0">
                <TextBlock Text="Data Baixa"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2659E7"/>
                <DatePicker Margin="0 20 0 0"
                         x:Name="DataBaixa"
                             Padding="7"

                             BorderBrush="#A7A6A7">
                    <DatePicker.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </DatePicker.Resources>
                </DatePicker>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="2" Margin="0 15 0 0">
                <TextBlock Text="Motivo Baixa"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#2659E7"/>
                <TextBox Margin="0 20 0 0"
                         TextWrapping="Wrap"
                         Height="100"
                             AcceptsReturn="True"
                             AcceptsTab="True"
                             SpellCheck.IsEnabled="True"
                         x:Name="MotivoBaixa"
                             Padding="7"
                             BorderBrush="#A7A6A7">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </StackPanel>



            <Button Grid.Column="0"
                    x:Name="Confirmar"
                        Grid.Row="3"
                        Margin="0 30 0 0"
                        Content="Confirmar"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Background="#2659E7"
                        BorderBrush="Transparent">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Grid.Row="4"
                    x:Name="Cancelar"
                    Margin="0 15 0 0"
                    Content="Cancelar"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Foreground="White"
                    Background="#2659E7"
                    BorderBrush="Transparent">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>
    </StackPanel>
</Window>
